<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".sdk_web.SDKWebMenuActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@android:color/white"
            app:layout_scrollFlags="enterAlways"
            app:theme="@style/ThemeOverlay.AppCompat.Dark">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <ImageView
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:contentDescription="@string/app_name"
        android:fitsSystemWindows="true"
        android:scaleType="fitCenter"
        android:src="@drawable/logo"
        app:layout_collapseMode="parallax"
        android:layout_marginLeft="10dp"
        />




    <Button
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="@drawable/button_border"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="16sp"
        app:fontFamily="sans-serif"
        android:id="@+id/widgetFeed"
        android:text="Widget + feed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintVertical_bias="0.151"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/splitfeed"
        android:background="@drawable/button_border"
        app:fontFamily="sans-serif"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:text="Split Feed"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/widgetFeed"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/viewPager"
        android:background="@drawable/button_border"
        app:fontFamily="sans-serif"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="View Pager"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splitfeed"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="15dp" />

    <Button
        android:id="@+id/continuousScroll"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button_border"
        android:text="Continuous Scroll"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:fontFamily="sans-serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splitfeed"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="15dp" />


</LinearLayout>