<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:taboola="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:padding="10dp"

android:orientation="vertical"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
>   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum_short" />

        <com.taboola.android.TBLClassicUnit
            android:id="@+id/taboola_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            taboola:tb_mode="alternating-widget-without-video-1x4"
            taboola:tb_page_type="article"
            taboola:tb_placement="Below Article"
            taboola:tb_publisher="sdk-tester-demo"
            taboola:tb_target_type="mix"
            taboola:tb_url="https://blog.taboola.com" />
    </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>